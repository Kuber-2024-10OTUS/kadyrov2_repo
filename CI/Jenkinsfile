pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh ' chmod +x ./CI/cmd.sh'
                sh './CI/cmd.sh'   
                 
                // Здесь могут быть команды для сборки вашего приложения, например:
                // sh 'mvn clean package'
            }
        }
        
        stage('Test') {
                steps {
                    sh './cmd.sh test'
                }
            }
            stage('Deploy') {
                steps {
                    sh './cmd.sh deploy'
                }
            }

        stage('Test') {
                steps {
                    sh './cmd.sh test'
                }
            }
            stage('Deploy') {
                steps {
                    sh './cmd.sh deploy'
                }
            }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}